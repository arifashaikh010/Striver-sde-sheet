class Solution{
        
    static int search(int arr[], int N, int X)
    {
        for(int i=0;i<N;i++){
            if(arr[i]==X){
                return i;
            }
        }
        return -1;
    }
    
}

//OR

class Solution{
        
    static int search(int arr[], int N, int X)
    {
        int i=0;
        while(i<N){
            if(arr[i]==X){
                return i;
            }
            i++;
        }
        return -1;
    }
    
}

/*
n = 4
arr[] = {1,2,3,4}
x = 3
Output: 2

n = 4
arr[] = {1,2,3,4}
x = 5
Output: -1
*/
